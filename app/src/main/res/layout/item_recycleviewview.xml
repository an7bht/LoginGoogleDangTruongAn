<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <View
        android:id="@+id/viewRecycle"
        android:layout_width="357dp"
        android:layout_height="114dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bogoc"
        android:backgroundTint="#B2AA61"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgTayLoy"
        android:layout_width="112dp"
        android:layout_height="99dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/viewRecycle"
        app:layout_constraintTop_toTopOf="@+id/viewRecycle"
        app:srcCompat="@drawable/eclipse"
        android:transitionName="img" />


    <TextView
        android:id="@+id/txtLove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:text="Love Story"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/viewRecycle"
        app:layout_constraintStart_toEndOf="@+id/imgTayLoy"
        app:layout_constraintTop_toTopOf="@+id/viewRecycle"
        app:layout_constraintVertical_bias="0.094" />

    <TextView
        android:id="@+id/txtTayLoy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Taylor Swift"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtLove"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintStart_toStartOf="@+id/txtLove"
        app:layout_constraintTop_toBottomOf="@+id/txtLove" />
</androidx.constraintlayout.widget.ConstraintLayout>